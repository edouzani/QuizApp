<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TransparencyDemo" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:colorPrimary">@color/placeholder</item>
        <item name="android:colorPrimaryDark">@color/dark</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:navigationBarColor">@color/dark</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
</resources>