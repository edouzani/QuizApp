<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:style="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/first_row"
        android:layout_width="@dimen/knowledge_first_row_width"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/knowledge_row_height">
        <include layout="@layout/knowledge_cell" android:id="@+id/first_elem"/>
        <include layout="@layout/knowledge_cell" android:id="@+id/second_elem"/>
        <include layout="@layout/knowledge_cell" android:id="@+id/third_elem"/>
        <include layout="@layout/knowledge_cell" android:id="@+id/forth_elem"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/first_row"
        android:layout_marginTop="@dimen/knowledge_overlap"
        android:layout_width="@dimen/knowledge_second_row_width"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/knowledge_row_height">

        <include layout="@layout/knowledge_cell" android:id="@+id/fifth_elem"/>
        <include layout="@layout/knowledge_cell" android:id="@+id/six_elem"/>
        <include layout="@layout/knowledge_cell" android:id="@+id/seven_elem"/>

    </LinearLayout>


</RelativeLayout>