<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/cell"

             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="@dimen/knowledge_item_width"
             android:layout_height="@dimen/knowledge_row_height"
             android:layout_marginRight="@dimen/knowledge_item_margin">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/knowledge_item_width"
        android:layout_height="@dimen/knowledge_row_height"
        android:src="@drawable/hexagon"

        android:visibility="visible"/>

    <TextView
        android:id="@+id/text"
        style="@style/knowledge_cell_text"
        android:layout_width="@dimen/knowledge_item_width"
        android:layout_height="wrap_content"
        android:text="05"/>
</FrameLayout>