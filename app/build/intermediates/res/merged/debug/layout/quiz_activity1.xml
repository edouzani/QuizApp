<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
     android:background="@drawable/quest_bg"
    android:layout_height="fill_parent">
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical">
	            
	    <SeekBar android:id="@+id/time_out"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="15dip"
	        android:paddingRight="15dip"
	        android:maxHeight="@dimen/progress_bar_max_height"
	        android:progressDrawable="@drawable/progressbar_bg" />
	    
	    <ScrollView
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	    	android:padding="10dip">
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:orientation="vertical">
	            
	            <LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:layout_gravity="center_vertical"
	                android:background="@drawable/question_bg"
	                android:padding="10dip">
	                <LinearLayout android:id="@+id/small_layout"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:orientation="vertical"
		                android:layout_marginRight="10dip"
		                android:paddingBottom="5dip"
	                    android:gravity="center_horizontal">
		                <ImageView android:id="@+id/small_image"
		                    android:layout_width="80dip"
		                    android:layout_height="80dip"
		                    android:scaleType="fitXY" />
		                <TextView android:id="@+id/tap_text"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:textSize="12sp"
		                    android:textColor="#EEEEEE"
		                    android:gravity="center_horizontal"
		                    android:layout_gravity="center_horizontal"
		                    android:text="@string/tap_to_zoom" />
		            </LinearLayout>
	                <TextView android:id="@+id/question"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:paddingTop="7dip"
	                    android:textColor="#FFFFFF"
	                    android:textSize="15sp" />
	            </LinearLayout>
	            
	            <RelativeLayout android:id="@+id/points_layout"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:background="@drawable/points_bg_normal"
	                android:layout_marginBottom="10dip"
	                android:paddingRight="30dip"
	                android:paddingLeft="20dip">
	                <TextView android:id="@+id/total_points"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="#FFFFFF"
	                    android:textSize="18sp"
	                    android:layout_centerInParent="true" />
	                <TextView android:id="@+id/question_number"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="#FFFFFF"
	                    android:textSize="16sp"
	                    android:layout_alignParentLeft="true"
	                    android:layout_centerVertical="true" />
	                <TextView android:id="@+id/current_points"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="#FFFFFF"
	                    android:textSize="16sp"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true" />
	            </RelativeLayout>
	            
	            <com.almadev.znaniesila.ui.TwoTextButton
					android:id="@+id/option1"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:background="@drawable/left_btn_selector"
	                android:visibility="gone"
	                android:gravity="left|center_vertical"
	                android:paddingLeft="50dip"
	                android:layout_marginBottom="8dip"
	                android:textColor="#FFFFFF" />
	            
	            <com.almadev.znaniesila.ui.TwoTextButton
					android:id="@+id/option2"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:background="@drawable/options_button"
	                android:visibility="gone"
	                android:gravity="left|center_vertical"
	                android:paddingLeft="50dip"
	                android:layout_marginBottom="8dip"
	                android:textColor="#FFFFFF" />
	            
	            <com.almadev.znaniesila.ui.TwoTextButton
					android:id="@+id/option3"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:background="@drawable/options_button"
	                android:visibility="gone"
	                android:gravity="left|center_vertical"
	                android:paddingLeft="50dip"
	                android:layout_marginBottom="8dip"
	                android:textColor="#FFFFFF" />
	            
	            <com.almadev.znaniesila.ui.TwoTextButton
					android:id="@+id/option4"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:background="@drawable/options_button"
	                android:visibility="gone"
	                android:gravity="left|center_vertical"
	                android:paddingLeft="50dip"
	                android:layout_marginBottom="8dip"
	                android:textColor="#FFFFFF" />
	        </LinearLayout>
	    </ScrollView>
	    
	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="10dip"
	        android:paddingRight="10dip"
	        android:layout_weight="0">
	        <ImageView android:id="@+id/home"
	            android:layout_width="36dip"
	            android:layout_height="36dip"
	            android:src="@drawable/ic_home_normal"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true" />
	        <ImageView android:id="@+id/next_question"
	            android:layout_width="36dip"
	            android:layout_height="36dip"
	            android:src="@drawable/ic_next_normal"
	            android:scaleType="centerCrop"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"/>
	    </RelativeLayout>
	</LinearLayout>
	
	<FrameLayout android:id="@+id/large_media"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
                 android:visibility="gone"
	    android:background="#000000">
        <ImageView android:id="@+id/large_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="center" />
		<SurfaceView android:id="@+id/large_video"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:gravity="center_vertical" />
	</FrameLayout>
    <TextView android:id="@+id/secondary_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_gravity="top|right"
        android:padding="15dip" />
</FrameLayout><!-- From: file:/D:/Android_Projects/QuizApp_Android%202.0/app/src/main/res/layout/quiz_activity1.xml -->