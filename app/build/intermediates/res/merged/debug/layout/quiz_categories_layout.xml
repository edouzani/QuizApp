<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:background="@drawable/quest_bg"
             android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="10dip"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp">


            <ImageView
                android:id="@+id/home"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_home"
                android:layout_height="40dp"/>

            <TextView
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_alignBottom="@id/home"
                android:text="ВЫБЕРИТЕ КАТЕГОРИЮ"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="40dp"/>
        </RelativeLayout>

        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dip"
            android:listSelector="@android:color/transparent"
            android:textFilterEnabled="true"/>

        <LinearLayout
            android:id="@android:id/empty"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/no_data_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="3dip"
                android:padding="10dip"
                android:text="@string/no_categories"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout><!-- From: file:/D:/Android_Projects/QuizApp_Android%202.0/app/src/main/res/layout/quiz_categories_layout.xml -->