<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/quest_bg"
                android:paddingBottom="10dip">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="РЕЗУЛЬТАТЫ"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/home"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/back_icon"/>


            <TextView
                android:id="@+id/catname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="СПОРТ"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="normal"/>

            <RelativeLayout
                android:id="@+id/prize"
                android:layout_width="280dp"
                android:layout_below="@id/catname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_height="280dp">
            <ImageView
                android:id="@+id/prize_img"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:src="@drawable/result_bar"/>

            <TextView
                android:id="@+id/points"
                android:layout_width="100dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="60dp"
                android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/total_points"
                    android:layout_width="180dp"
                    android:text="@string/points_record"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_below="@id/points"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/record_text"
                    android:layout_width="180dp"
                    android:text="РЕКОРД:"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/total_points"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/record"
                    android:layout_width="180dp"
                    android:text="7500 БАЛЛОВ"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_below="@id/record_text"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/leaderboard"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignLeft="@id/prize"
                android:layout_below="@id/prize"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-10dp"
                android:scaleType="centerInside"
                android:src="@drawable/rating_icon"/>

            <ImageView
                android:id="@+id/restart"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignRight="@id/prize"
                android:layout_below="@id/prize"
                android:layout_marginRight="30dp"
                android:layout_marginTop="-10dp"
                android:scaleType="centerInside"
                android:src="@drawable/restart_icon"/>

            <TextView
                android:id="@+id/share_text"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/restart"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:typeface="sans"
                android:textStyle="normal"
                android:text="Поделитесь результатами:"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/prize"
                android:layout_below="@id/share_text"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/share_vk"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/vk_logo"/>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/share_divider"/>

                <ImageView
                    android:id="@+id/share_fb"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/fb_logo"/>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/share_divider"/>

                <ImageView
                    android:id="@+id/share_ok"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/ok_logo"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout><!-- From: file:/D:/Android_Projects/QuizApp_Android%202.0/app/src/main/res/layout/final_screen.xml -->